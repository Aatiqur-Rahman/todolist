<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>to do list</title>

    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="box" id="heading">
        <h1><%= title %></h1>
    </div>
 

    <div class="box">

    <%  for ( let i = 0 ; i < item_list_name.length ; i ++ ){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checked" id="" value="<%= item_list_name[i].name %>" onchange="this.form.submit()">
                <p> <%= item_list_name[i].name %><p>
            </div>
        </form>
    <% } %>

        <form action="/" method="post">
            <div class="item">
                <input type="text" name="list_item" placeholder="New Item" autocomplete="off">
                <button type="submit" name="button" value="<%= title %>">+</button>
            </div>
        </form>
    </div>


</body>
</html>